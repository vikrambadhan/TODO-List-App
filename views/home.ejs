<html>
    <head>
        <title> <%= title %></title>
        <script src="https://kit.fontawesome.com/ea9624cef9.js" crossorigin="anonymous"></script>
        <link href="/css/home.css" rel="stylesheet">
        <script src="jquery-3.5.1.min.js"></script>
    </head>
    <body>
        <!-- Outer Div -->
        <div id="outer-div">
            <h1>TO-DO List App</h1>
            <div>
               <!-- First form that takes input regarding the task to be added -->
               <form action="/add-task" method="POST">
                  <div id="div1"> 
                      <!-- Descrition input -->
                      <span>DESCRIPTION</span><br>
                      <input type="text" placeholder="What do you need to do?" name="description" required>
                  </div>
                  <div id="div2">
                       <!-- Category input -->
                       <div id="category">
                           <span>CATEGORY</span><br>
                           <select name="category" required>
                               <option value="" disabled>Choose a category</option>
                               <option value="Personal" selected>Personal</option>
                               <option value="Work">Work</option>
                               <option value="School">School</option>
                               <option value="Cleaning">Cleaning</option>
                               <option value="Other">Other</option>
                           </select>
                       </div>
                       <!-- Date input -->
                       <div id="date">
                          <span>DUE DATE</span><br>
                          <input type="date" name="date" required>
                       </div>
                   </div>
                   <!-- Add Button -->
                   <div id="buttons">
                       <button type="submit" id="add_btn"><i class="fas fa-plus"></i> &nbsp;ADD TASK</button>
                   </div>
               </form>
               <!-- Second form that takes input regarding the task deletion selection -->
               <form action="/delete-task" method="GET">
                   <!-- List of tasks -->
                   <% for(let i of list){ %>
                   <div id="task_list">
                       <div id="task1">
                            <input type="checkbox" id="check" name="<%= i._id %>">
                            <span id="span1" class="strikethrough"><%= i.description %></span><br>
                            <span id="span2" class="strikethrough"><i class="far fa-calendar-alt"></i> &nbsp;<%= i.date %></span>
                       </div>
                       <!-- Different cases for different display of categories -->
                       <div id="task2">
                           <% if(i.category == "Work"){ %>
                               <button class="work taskType"><%= i.category %></button>
                           <% } %>
                           <% if(i.category == "Personal"){ %>
                               <button class="personal taskType"><%= i.category %></button>
                           <% } %>
                           <% if(i.category == "School"){ %>
                               <button class="school taskType"><%= i.category %></button>
                           <% } %>
                           <% if(i.category == "Cleaning"){ %>
                               <button class="cleaning taskType"><%= i.category %></button>
                           <% } %>
                           <% if(i.category == "Other"){ %>
                               <button class="other taskType"><%= i.category %></button>
                           <% } %>
                       </div>
                   </div>
                   <% } %>
                   <!-- Delete button -->
                   <div id="delete-btn">
                      <button id="dlt_btn" type="submit" value="submit"><i class="fas fa-trash-alt"></i> &nbsp;DELETE TASK</button>
                   </div>
               </form>
            </div>
        </div>
        <script src="/js/home.js"></script>
    </body>
</html>